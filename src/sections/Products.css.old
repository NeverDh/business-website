.custom-carousel {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.carousel-control-prev,
.carousel-control-next {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background-color: rgba(0, 0, 0, 0.5);
  border: none;
  padding: 10px;
  z-index: 2;
}

.carousel-control-prev {
  left: 0;
}

.carousel-control-next {
  right: 0;
}

.carousel-control-prev-icon,
.carousel-control-next-icon {
  background-color: black;
  width: 30px;
  height: 30px;
}

.card {
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 400px;
}

.carousel-indicators {
  display: flex;
  justify-content: center;
}

.indicator {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background-color: #ccc;
  margin: 0 5px;
  border: none;
  cursor: pointer;
}

.indicator.active {
  background-color: #333;
}

.carousel-inner {
  overflow: hidden;
  position: relative;
}

.transition-slide {
  display: flex;
  transition: transform 0.5s ease-in-out;
}

.carousel-inner.animating .transition-slide {
  transition: transform 0.5s ease-in-out;
  transform: translateX(-100%);
}
